page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
  background-color: #eef0f6;
  padding-bottom: 10 rpx;
}
.message-container {
  background-color: #fff;
  margin: 40 rpx 40 rpx;
  padding: 20 rpx 30 rpx;
  border-radius: 10 rpx;
}
.message-container .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15 rpx;
}
.message-container .top .title {
  display: flex;
}
.message-container .top .title image {
  width: 40 rpx;
  margin-top: 4 rpx;
  margin-right: 15 rpx;
}
.message-container .top .title text {
  color: #444;
  font-size: 32 rpx;
}
.message-container .top .date {
  font-size: 32 rpx;
  color: #a0a0a0;
}
.message-container .content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28 rpx;
  line-height: 1.7;
  color: #a0a0a0;
}
.message-container .bottom {
  display: flex;
  justify-content: space-between;
  border-top: solid 1 rpx #e0e0e0;
  margin-top: 20 rpx;
  padding-top: 20 rpx;
}
.message-container .bottom text {
  font-size: 28 rpx;
  color: #555;
}
.empty {
  margin-top: 80 rpx;
}


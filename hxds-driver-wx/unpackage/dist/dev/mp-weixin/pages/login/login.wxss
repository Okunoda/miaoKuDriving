page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
}
.top {
  width: 100%;
  display: block;
}
.logo {
  display: block;
  width: 75%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50 rpx;
}
.desc {
  text-align: center;
  color: #555;
  margin-top: 20 rpx;
}
.desc .name {
  font-size: 38 rpx;
}
.desc .version {
  font-size: 30 rpx;
}
.btn {
  background-color: #2074fd;
  color: #fff;
  width: 70%;
  margin-top: 200 rpx;
}
.btn::after {
  border: none;
}
.btn:active {
  background-color: #0259e9;
}
.register-container {
  text-align: center;
  font-size: 30 rpx;
  color: #555;
  margin-top: 30 rpx;
}
.register-container .link {
  color: #2074fd;
  margin-left: 10 rpx;
}
.remark {
  display: block;
  color: #a0a0a0;
  font-size: 28 rpx;
  margin-left: 50 rpx;
  margin-right: 50 rpx;
  line-height: 1.7;
  position: absolute;
  bottom: 60 rpx;
}


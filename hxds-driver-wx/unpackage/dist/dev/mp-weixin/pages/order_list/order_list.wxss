page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
  background-color: #eef0f6;
}
.order-list .month {
  display: flex;
  justify-content: space-between;
  padding: 20 rpx 30 rpx;
}
.order-list .month text {
  font-size: 34 rpx;
  font-weight: bold;
  color: #444;
}
.order-list .month image {
  width: 38 rpx;
}
.order-list .order {
  background-color: #fff;
  margin-bottom: 20 rpx;
}
.order-list .order:last-child {
  margin-bottom: 0;
}
.order-list .order .top {
  display: flex;
  justify-content: space-between;
  padding-top: 20px;
}
.order-list .order .top .date {
  background-color: #2074fd;
  color: #fff;
  padding-left: 40 rpx;
  padding-right: 30 rpx;
  padding-top: 13 rpx;
  padding-bottom: 13 rpx;
  border-top-right-radius: 100 rpx;
  border-bottom-right-radius: 100 rpx;
  font-size: 32 rpx;
  font-weight: bold;
}
.order-list .order .top .amount-status {
  padding-right: 30 rpx;
  padding-top: 10 rpx;
}
.order-list .order .top .amount-status .amount {
  font-size: 32 rpx;
  font-weight: bold;
  color: #444;
  margin-right: 35 rpx;
}
.order-list .order .top .amount-status .status {
  font-size: 30 rpx;
  color: #555;
  font-weight: bold;
}
.order-list .order .top .amount-status .green {
  color: #34ba97;
}
.order-list .order .top .amount-status .red {
  color: #ff3b3b;
}
.order-list .order .top .amount-status .orange {
  color: #fea802;
}
.order-list .order .content {
  padding-top: 40 rpx;
  padding-bottom: 30 rpx;
}
.order-list .order .content .from {
  display: flex;
  margin-bottom: 25 rpx;
  font-size: 30 rpx;
  color: #444;
  padding: 0 40 rpx;
}
.order-list .order .content .from::before {
  display: block;
  content: '';
  width: 20 rpx;
  height: 20 rpx;
  border-radius: 10 rpx;
  background-color: #34ba97;
  margin-top: 14 rpx;
  margin-right: 17 rpx;
}
.order-list .order .content .to {
  display: flex;
  margin-bottom: 25 rpx;
  font-size: 30 rpx;
  color: #444;
  padding: 0 40 rpx;
}
.order-list .order .content .to::before {
  display: block;
  content: '';
  width: 20 rpx;
  height: 20 rpx;
  border-radius: 10 rpx;
  background-color: #ff9d5b;
  margin-top: 14 rpx;
  margin-right: 17 rpx;
}
.order-list .order .content .desc {
  display: flex;
  justify-content: space-between;
  padding-left: 40 rpx;
  padding-right: 25 rpx;
}
.order-list .order .content .desc text {
  font-size: 30 rpx;
  color: #a0a0a0;
}
.order-list .order .content .desc .rate {
  margin-top: 5 rpx;
}


page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
  background-color: #eef0f6;
}
.waiting-container {
  background-color: #fff;
  padding-top: 100 rpx;
  padding-bottom: 80 rpx;
  margin-bottom: 25 rpx;
}
.waiting-container .payment {
  display: block;
  width: 50%;
  margin-left: auto;
  margin-right: auto;
}
.waiting-container .title {
  font-size: 38 rpx;
  font-weight: bold;
  color: #444;
  text-align: center;
  margin-top: 30 rpx;
}
.waiting-container .second {
  text-align: center;
  margin-top: 15 rpx;
  color: #444;
  font-size: 34 rpx;
}
.waiting-container .btn {
  background-color: #2074fd;
  color: #fff;
  width: 65%;
  margin-top: 80 rpx;
}
.waiting-container .btn::after {
  border: none;
}
.waiting-container .btn:active {
  background-color: #0259e9;
}
.notice-container {
  background-color: #fff;
  padding-left: 20 rpx;
  padding-right: 30 rpx;
  padding-bottom: 80 rpx;
}
.notice-container .notice-title {
  text-align: center;
  font-size: 32 rpx;
  padding-top: 50 rpx;
  padding-bottom: 20 rpx;
}
.notice-container .notice-title text {
  margin-left: 5 rpx;
}
.notice-container .desc {
  font-size: 28 rpx;
  color: #a0a0a0;
  line-height: 1.7;
  padding-left: 25 rpx;
  padding-top: 10 rpx;
  padding-bottom: 10 rpx;
  display: flex;
}
.notice-container .desc .num {
  margin-right: 10 rpx;
}


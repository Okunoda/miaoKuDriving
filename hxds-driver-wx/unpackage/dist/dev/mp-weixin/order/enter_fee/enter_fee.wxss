page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
}
.step {
  margin-top: 60 rpx;
}
.title {
  font-size: 50 rpx;
  text-align: center;
  font-weight: bold;
  margin-top: 65 rpx;
  margin-bottom: 40 rpx;
  color: #444;
}
.btn {
  background-color: #2074fd;
  color: #fff;
  margin-top: 80 rpx;
  width: 90%;
}
.btn::after {
  border: none;
}
.btn:active {
  background-color: #0259e9;
}


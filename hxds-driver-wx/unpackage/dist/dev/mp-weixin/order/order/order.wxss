page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
}
.customer-container {
  display: flex;
  padding-left: 50 rpx;
  padding-right: 50 rpx;
  padding-top: 50 rpx;
}
.customer-container .info {
  margin-left: 30 rpx;
}
.customer-container .info .customer-name {
  font-size: 36 rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 10 rpx;
}
.customer-container .info .customer-tel {
  font-size: 28 rpx;
  color: #555;
  margin-bottom: 10 rpx;
  letter-spacing: 1 rpx;
}
.address-container {
  font-size: 28 rpx;
  color: #555;
  line-height: 1.6;
  margin-top: 35 rpx;
  padding-left: 50 rpx;
  padding-right: 50 rpx;
}
.address-container .from {
  display: flex;
}
.address-container .from::before {
  display: block;
  content: '';
  width: 20 rpx;
  height: 20 rpx;
  border-radius: 10 rpx;
  background-color: #34ba97;
  margin-top: 14 rpx;
  margin-right: 17 rpx;
}
.address-container .dashed-line {
  height: 30 rpx;
  border-left: #ccc 2 rpx dashed;
  margin-top: 5 rpx;
  margin-bottom: 5 rpx;
  margin-left: 10 rpx;
}
.address-container .to {
  display: flex;
}
.address-container .to::before {
  display: block;
  content: '';
  width: 20 rpx;
  height: 20 rpx;
  border-radius: 10 rpx;
  background-color: #ff9d5b;
  margin-top: 14 rpx;
  margin-right: 17 rpx;
}
.order-container {
  padding: 25 rpx 30 rpx;
  margin-top: 30 rpx;
  border-top: solid 1 rpx #e0e0e0;
}
.order-container view {
  line-height: 60 rpx;
  height: 60 rpx;
  color: #555;
  font-size: 28 rpx;
  display: flex;
}
.setion-title {
  background-color: #eef0f6;
  padding: 25 rpx 30 rpx;
  display: flex;
}
.setion-title image {
  width: 32 rpx;
  height: auto;
  margin-top: 9 rpx;
  margin-right: 12 rpx;
}
.setion-title text {
  font-size: 32 rpx;
  font-weight: bold;
  color: #555;
}
.section-content {
  padding: 20 rpx 20 rpx;
}
.section-content .item {
  display: flex;
  justify-content: space-between;
  border-bottom: solid 1 rpx #e0e0e0;
  padding: 25 rpx 20 rpx 25 rpx 20 rpx;
}
.section-content .item:last-child {
  border-bottom: none;
}
.section-content .item .left {
  border-left: solid 7 rpx #38b3d4;
  padding-left: 20 rpx;
}
.section-content .item .left .item-title {
  display: block;
  font-size: 28 rpx;
  color: #555;
  margin-bottom: 15 rpx;
}
.section-content .item .left .item-desc {
  display: block;
  font-size: 26 rpx;
  color: #b0b0b0;
}
.section-content .item .right {
  color: #555;
  font-size: 28 rpx;
}
.section-content .content-container {
  display: flex;
  justify-content: space-between;
  padding: 25 rpx 20 rpx;
}
.section-content .content-container .content {
  display: block;
  font-size: 28 rpx;
  color: #555;
  margin-bottom: 30 rpx;
}
.section-content .content-container .content:last-child {
  margin-bottom: 0;
}
.section-content .content-container .content text {
  color: #555;
  font-weight: bold;
  margin-right: 3 rpx;
}
.section-content .content-container .content .red {
  color: #ff3b3b;
}
.section-content .content-container .img {
  width: 150 rpx;
  height: auto;
}
.section-content .remark-container {
  padding: 20 rpx;
}
.section-content .remark-container .remark-rate {
  display: flex;
}
.section-content .remark-container .remark-rate .photo {
  margin-right: 15 rpx;
}
.section-content .remark-container .remark-rate .rate {
  flex-grow: 1;
  margin-top: 8 rpx;
  display: flex;
  justify-content: space-between;
  color: #1aa4ec;
}
.section-content .remark-container .remark {
  color: #444;
  line-height: 40 rpx;
  margin-top: 20 rpx;
}
.operate-container {
  background-color: #eef0f6;
  padding: 45 rpx 0 0 0;
}
.operate-container .operate {
  text-align: center;
  font-size: 26 rpx;
  color: #2074fd;
}
.contact-container {
  background-color: #eef0f6;
  padding: 45 rpx 50 rpx 45 rpx 50 rpx;
  text-align: center;
  font-size: 26 rpx;
  color: #777;
}
.contact-container .contact {
  margin-bottom: 20 rpx;
}
.appeal-title {
  color: #fea802;
  font-weight: bold;
  font-size: 40 rpx;
  text-align: center;
  padding: 45 rpx 0 30 rpx 0;
}


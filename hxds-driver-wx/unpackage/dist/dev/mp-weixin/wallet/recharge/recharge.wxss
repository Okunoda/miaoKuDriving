page {
  height: 100%;
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
}
.page {
  padding-bottom: 70 rpx;
  padding-left: 40 rpx;
  padding-right: 40 rpx;
  padding-top: 120 rpx;
}
.notice {
  background-color: #fee7a3;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20 rpx 30 rpx;
}
.notice text {
  font-size: 26 rpx;
  color: #ac9146;
  margin-left: 10 rpx;
}
.title-container {
  display: flex;
  justify-content: space-between;
  border-bottom: solid 1 rpx #e0e0e0;
  padding-bottom: 20 rpx;
}
.title-container .title {
  color: #444;
  font-size: 34 rpx;
  font-weight: bold;
}
.title-container .balance {
  color: #ff5555;
  font-size: 34 rpx;
  font-weight: bold;
}
.recharge-container {
  padding-top: 40 rpx;
}
.recharge-container .title {
  font-size: 30 rpx;
  color: #444;
  margin-bottom: 35 rpx;
}
.recharge-container .recharge-amount {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.recharge-container .recharge-amount .amount {
  width: 150 rpx;
  border: solid 1 rpx #e0e0e0;
  text-align: center;
  line-height: 70 rpx;
  border-radius: 8 rpx;
  margin-bottom: 20 rpx;
  color: #444;
  font-size: 28 rpx;
}
.recharge-container .recharge-amount .active {
  background-color: rgba(32, 116, 253, 0.1);
  border: solid 1 rpx #2074fd;
}
.recharge-container .desc {
  font-size: 26 rpx;
  color: #a0a0a0;
  margin-top: 20 rpx;
}
.recharge-container .btn {
  background-color: #2074fd;
  color: #fff;
  margin-top: 60 rpx;
}
.recharge-container .btn::after {
  border: none;
}
.recharge-container .btn:active {
  background-color: #0259e9;
}
.rule-container {
  padding-top: 60 rpx;
}
.rule-container .title {
  font-size: 30 rpx;
  color: #a0a0a0;
  margin-bottom: 25 rpx;
}
.rule-container .rule {
  font-size: 28 rpx;
  color: #a0a0a0;
  line-height: 1.7;
  padding-top: 10 rpx;
  padding-bottom: 10 rpx;
  display: flex;
}
.rule-container .rule .num {
  margin-right: 10 rpx;
}


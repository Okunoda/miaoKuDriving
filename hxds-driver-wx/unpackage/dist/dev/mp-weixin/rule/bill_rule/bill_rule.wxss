page {
  font-family: Helvetica Neue, Helvetica, Arial, Microsoft Yahei, Hiragino Sans GB, Heiti SC, WenQuanYi Micro Hei, sans-serif;
}
.page {
  padding: 50 rpx 40 rpx 70 rpx 40 rpx;
}
.title {
  font-size: 38 rpx;
  color: #444;
  text-align: center;
}
.section {
  margin-top: 40 rpx;
}
.section .section-title {
  display: flex;
  color: #a0a0a0;
  font-size: 32 rpx;
  margin-bottom: 30 rpx;
}
.section .section-title::before {
  content: '';
  display: block;
  height: 0;
  flex-grow: 1;
  border-bottom: 1 rpx solid #ccc;
  margin-right: 25 rpx;
  margin-top: 24 rpx;
}
.section .section-title::after {
  content: '';
  display: block;
  height: 0;
  flex-grow: 1;
  border-bottom: 1 rpx solid #ccc;
  margin-left: 25 rpx;
  margin-top: 24 rpx;
}
.section .item {
  display: flex;
  font-size: 32 rpx;
  color: #444;
  line-height: 1;
  margin-top: 40 rpx;
  margin-bottom: 20 rpx;
  justify-content: space-between;
}
.section .item .left {
  display: flex;
}
.section .item .left::before {
  content: '';
  display: block;
  width: 10 rpx;
  height: 32 rpx;
  background-color: #777;
  margin-right: 15 rpx;
  border-radius: 3 rpx;
}
.section .row {
  display: flex;
  justify-content: space-between;
  padding-left: 25 rpx;
  padding-top: 10 rpx;
  padding-bottom: 10 rpx;
}
.section .row .label {
  color: #a0a0a0;
  font-size: 28 rpx;
}
.section .row .value {
  color: #a0a0a0;
  font-size: 28 rpx;
}
.section .desc {
  font-size: 28 rpx;
  color: #a0a0a0;
  line-height: 1.7;
  padding-left: 25 rpx;
  padding-top: 10 rpx;
  padding-bottom: 10 rpx;
}

